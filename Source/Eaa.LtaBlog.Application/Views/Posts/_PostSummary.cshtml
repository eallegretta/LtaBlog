@model Eaa.LtaBlog.Application.Models.PostsViewModel.PostModel
	
<div id="post-@Model.Post.Id" class="post">
	<div class="postTitle">@Html.ActionLink(Model.Post.Title, "Show", new { id = Model.Post.Id })</div>
	<div class="postBody">@Html.Raw(Model.Post.Body)</div>
	<div class="postFooter">
		<div class="postAuthor">Created at @Model.Post.CreatedAt by @Model.Author</div>
		<div class="postTags">
			Tags:
			<ul>
			@foreach (var tag in Model.Post.Tags)
			{
				<li>@tag</li>
			}
			</ul>
		</div>
	</div>
</div>